<Page
    x:Class="CODuo.Home.Right"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CODuo.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:charts="using:Ailon.QuickCharts"
    mc:Ignorable="d"
    Background="#FFEBF5F9">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Border x:Name="RootBorder" Margin="10,10,10,10" Background="{ThemeResource SystemAccentColor}">
        <Grid Padding="10,0,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="600"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="{Binding Path=CurrentRegion.Name, Mode=OneWay}" Foreground="White" Style="{StaticResource SubheaderTextBlockStyle}" Margin="4"/>
            <StackPanel Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" Orientation="Horizontal" Margin="4,-10,4,4">
                <TextBlock Text="As of:" Style="{StaticResource CaptionTextBlockStyle}"  Foreground="White"/>
                <TextBlock Text="{Binding Path=CurrentContainer.LastUpdated}" Margin="4,0,4,0" Style="{StaticResource CaptionTextBlockStyle}"  Foreground="White"/>
            </StackPanel>
            <Border Grid.Row="2" Grid.ColumnSpan="2" Margin="4" Padding="4" Background="White">
                <Image Stretch="Uniform" Height="48" Source="{Binding Path=CurrentRegion, Converter={StaticResource RegionToLogoConverter}}" Margin="4" HorizontalAlignment="Center" />
            </Border>
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Operator:" Margin="4,0" Style="{StaticResource BodyTextBlockStyle}" Foreground="White"/>
            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Path=CurrentOperator.Name, Mode=OneWay}" Margin="4,0" Style="{StaticResource BaseTextBlockStyle}"  Foreground="White"/>
            <TextBlock Grid.Row="4" Grid.Column="0" Text="Contact:" Margin="4,8" Style="{StaticResource BodyTextBlockStyle}" Foreground="White"/>
            <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal">
                <controls:ContactButton ContactType="Phone" Foreground="#FFc82538" Height="48" Margin="0,4,8,4" />
                <controls:ContactButton ContactType="EMail" ContactUri="{Binding Path=CurrentOperator.EMail}" Height="48" Margin="8,4" Foreground="White" />
                <controls:ContactButton ContactType="Web" ContactUri="{Binding Path=CurrentOperator.Website}" Height="48" Margin="8,4" Foreground="White" />
                <controls:ContactButton ContactType="Twitter" ContactUri="{Binding Path=CurrentOperator.Twitter}" Height="48" Margin="8,4" Foreground="White" />
            </StackPanel>
            <TextBlock Grid.Row="7" Grid.Column="0" Text="Supplying:" Margin="4,0" Style="{StaticResource BodyTextBlockStyle}"  Foreground="White"/>
            <StackPanel Grid.Row="7" Grid.Column="1" Orientation="Horizontal">
                <TextBlock Text="~" Margin="4,0,0,0" Style="{StaticResource BodyTextBlockStyle}"  Foreground="White"/>
                <TextBlock Text="{Binding Path=CurrentRegionPopulation, Mode=OneWay, Converter={StaticResource StringFormatConverter}, ConverterParameter=[0:N0]}" Margin="2,0,0,0" Style="{StaticResource BaseTextBlockStyle}"  Foreground="White"/>
                <TextBlock Text="people" Margin="2,0,4,0" Style="{StaticResource BodyTextBlockStyle}"  Foreground="White"/>
            </StackPanel>
            <Path Grid.Row="8" Grid.ColumnSpan="2" Data="M0,0 L252,0" Fill="White" HorizontalAlignment="Left" Height="1" Margin="75,20" Stretch="Fill" Stroke="White" VerticalAlignment="Center" Visibility="Collapsed" />
            <Pivot Grid.Row="8" Grid.ColumnSpan="2" HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch" Margin="-8,10" IsHeaderItemsCarouselEnabled="True">
