                            <TextBlock Text="{Binding Path=DomesticConsumption, Mode=OneWay, Converter={StaticResource StringFormatConverter}, ConverterParameter=[0:N2]}" Margin="0" Style="{StaticResource BodyTextBlockStyle}" Foreground="White"/>
