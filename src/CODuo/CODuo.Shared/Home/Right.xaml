                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="0.5*"/>
                            <RowDefinition Height="0.5*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Current Generation:" Margin="4,0" Style="{StaticResource BodyTextBlockStyle}"  Foreground="White"/>
                        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                            <TextBlock Text="{Binding Path=CurrentRegionGeneration.Estimated.TotalMW, Mode=OneWay, Converter={StaticResource StringFormatConverter}, ConverterParameter=[0:N]}" Margin="4,0,0,0" Style="{StaticResource BaseTextBlockStyle}"  Foreground="White"/>
                            <TextBlock Text="MWatts" Margin="2,0,4,0" Style="{StaticResource BodyTextBlockStyle}"  Foreground="White"/>
                        </StackPanel>
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Carbon Intensity:" Margin="4,0" Style="{StaticResource BodyTextBlockStyle}"  Foreground="White"/>
                        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                            <TextBlock Text="{Binding Path=CurrentRegionGeneration.Estimated.GramsOfCO2PerkWh, Mode=OneWay}" Margin="4,0,0,0" Style="{StaticResource BaseTextBlockStyle}" Foreground="White"/>
                            <TextBlock Text="gCO₂/kWh" Margin="2,0,4,0" Style="{StaticResource BodyTextBlockStyle}" Foreground="White"/>
                        </StackPanel>
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Carbon Emitted:" Margin="4,0" Style="{StaticResource BodyTextBlockStyle}"  Foreground="White"/>
                        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
                            <TextBlock Text="{Binding Path=TonnesOfCO2PerHour, Mode=OneWay, Converter={StaticResource StringFormatConverter}, ConverterParameter=[0:N2]}" Margin="4,0,0,0" Style="{StaticResource BaseTextBlockStyle}" Foreground="White"/>
                            <TextBlock Text="tonnes per hour" Margin="2,0,4,0" Style="{StaticResource BodyTextBlockStyle}" Foreground="White" VerticalAlignment="Bottom"/>
                        </StackPanel>
                        <charts:SerialChart Grid.Row="3" Grid.ColumnSpan="2" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="White" PlotAreaBackground="White" DataSource="{Binding GenerationData}" CategoryValueMemberPath="At">
                            <charts:SerialChart.Graphs>
                                <charts:LineGraph Title="Estimated" ValueMemberPath="EstimatedGeneration"/>
                                <charts:LineGraph Title="Actual" ValueMemberPath="ActualGeneration"/>
                            </charts:SerialChart.Graphs>
                        </charts:SerialChart>
                        <charts:SerialChart Grid.Row="4" Grid.ColumnSpan="2" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="White" PlotAreaBackground="White" DataSource="{Binding GenerationData}" CategoryValueMemberPath="At">
                            <charts:SerialChart.Graphs>
                                <charts:LineGraph Title="Estimated" ValueMemberPath="EstimatedGramsOfCO2PerkWh"/>
                                <charts:LineGraph Title="Actual" ValueMemberPath="ActualGramsOfCO2PerkWh"/>
                            </charts:SerialChart.Graphs>
                        </charts:SerialChart>
