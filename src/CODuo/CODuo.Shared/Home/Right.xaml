                        <controls:DomesticToNonDomesticConsumption Grid.Row="0" Grid.ColumnSpan="2" DomesticConsumptionPercent="{Binding Path=CurrentRegion.PercentOfConsumptionBeingDomestic}" TotalGeneration="{Binding Path=CurrentRegionGeneration.Estimated.TotalMW, Mode=OneWay}"/>
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Domestic Consumption:" Margin="4,0" Style="{StaticResource BaseTextBlockStyle}"  Foreground="White"/>
